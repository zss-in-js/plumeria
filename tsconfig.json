{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": ["ESNext", "dom"],
    "moduleResolution": "node",
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "target": "ES2022",
    "noEmitOnError": true,
    "skipLibCheck": true,
    "removeComments": true
  },
  "include": [
    "./packages/core/src/",
    "./packages/collection/src/",
    "./packages/next/src/"
  ],
  "exclude": [
    "test-e2e/**",
    "packages/**/dist/**",
    "node_modules",
    "packages/compiler/**"
  ]
}
