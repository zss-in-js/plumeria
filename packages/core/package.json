{
  "name": "@plumeria/core",
  "version": "0.8.13",
  "description": "Near Zero-runtime CSS-in-JS for efficient design systems.",
  "keywords": [
    "css",
    "css-in-js",
    "plumeria",
    "react",
    "next",
    "vite"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zss-in-js/plumeria.git",
    "directory": "packages/core"
  },
  "license": "MIT",
  "sideEffects": false,
  "exports": {
    "./package.json": "./package.json",
    "./stylesheet": "./stylesheet/core.css",
    "./build-helper": {
      "types": "./types/methods/build-helper.d.ts",
      "import": "./dist/esm/methods/build-helper.js",
      "default": "./dist/cjs/methods/build-helper.js"
    },
    ".": {
      "types": "./types/index.d.ts",
      "import": "./dist/esm/index.js",
      "default": "./dist/cjs/index.js"
    }
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "types/index.d.ts",
  "files": [
    "dist/",
    "types/",
    "stylesheet/"
  ],
  "scripts": {
    "build": "rimraf dist types && pnpm esm && pnpm cjs",
    "cjs": "tsc --project tsconfig.cjs.json",
    "esm": "tsc --project tsconfig.esm.json"
  },
  "dependencies": {
    "zss-engine": "^0.2.27",
    "zss-utils": "0.2.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
