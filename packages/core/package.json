{
  "name": "@plumeria/core",
  "version": "0.8.0-beta.2",
  "description": "Near Zero-runtime CSS-in-JS for efficient design systems.",
  "keywords": [
    "css",
    "css-in-js",
    "plumeria",
    "react",
    "vite",
    "next"
  ],
  "repository": "github:zss-in-js/plumeria",
  "license": "MIT",
  "sideEffects": false,
  "exports": {
    "./package.json": "./package.json",
    "./stylesheet": "./stylesheet/core.css",
    "./build-helper": {
      "import": "./dist/esm/build-helper.js",
      "require": "./dist/cjs/build-helper.js",
      "types": "./types/build-helper.d.ts"
    },
    ".": {
      "types": "./types/index.d.ts",
      "import": "./dist/esm/index.js",
      "default": "./dist/cjs/index.js"
    }
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "types/index.d.ts",
  "files": [
    "dist/",
    "types/",
    "stylesheet/"
  ],
  "scripts": {
    "build": "rimraf dist types && pnpm esm && pnpm cjs",
    "cjs": "tsc --project tsconfig.cjs.json",
    "esm": "tsc --project tsconfig.esm.json"
  },
  "dependencies": {
    "zss-utils": "0.0.8"
  },
  "peerDependencies": {
    "@plumeria/compiler": ">=0.7.7"
  },
  "publishConfig": {
    "access": "public"
  }
}
