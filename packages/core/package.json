{
  "name": "@plumeria/core",
  "version": "0.12.0",
  "description": "Zero-runtime, expressive CSS-in-JS library for TypeScript.",
  "keywords": [
    "css",
    "css-in-js",
    "plumeria",
    "react",
    "next",
    "vite"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zss-in-js/plumeria.git",
    "directory": "packages/core"
  },
  "license": "MIT",
  "sideEffects": false,
  "exports": {
    "./package.json": "./package.json",
    "./stylesheet.css": "./stylesheet.css",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "default": "./dist/index.js"
    },
    "./processors": {
      "types": "./dist/processors/css.d.ts",
      "import": "./dist/processors/css.mjs",
      "default": "./dist/processors/css.js"
    }
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "stylesheet.css"
  ],
  "scripts": {
    "build": "tsdown && node strip-comments"
  },
  "dependencies": {
    "zss-engine": "0.2.48",
    "zss-utils": "0.2.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
