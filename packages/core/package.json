{
  "name": "@plumeria/core",
  "version": "0.6.1",
  "description": "Near Zero-runtime CSS-in-JS for efficient design systems.",
  "keywords": [
    "react",
    "css",
    "css-in-js",
    "plumeria",
    "styling"
  ],
  "author": "Refirst",
  "repository": "github:zss-in-js/plumeria",
  "license": "MIT",
  "sideEffects": false,
  "exports": {
    "./package.json": "./package.json",
    "./dist/method/create-build-helper": {
      "types": "./dist/method/create-build-helper.d.ts",
      "import": "./dist/method/create-build-helper.mjs",
      "default": "./dist/method/create-build-helper.js"
    },
    "./dist/method/global-build-helper": {
      "types": "./dist/method/global-build-helper.d.ts",
      "import": "./dist/method/global-build-helper.mjs",
      "default": "./dist/method/global-build-helper.js"
    },
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "default": "./dist/index.js"
    }
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist && pnpm build:mjs && pnpm cjs && pnpm minify && cp -r src/styles dist",
    "build:mjs": "pnpm esm && for file in $(find dist -name '*.js'); do mv \"$file\" \"${file%.*}.mjs\"; done",
    "cjs": "npx tsc --project tsconfig.cjs.json",
    "esm": "npx tsc --project tsconfig.esm.json",
    "minify": "for file in $(find dist -name '*.js' -o -name '*.mjs'); do terser \"$file\" -m -o \"$file\"; done",
    "test": "jest --config ../../jest.config.js"
  },
  "dependencies": {
    "@plumeria/collection": "workspace:^",
    "zss-engine": "^0.2.5"
  },
  "publishConfig": {
    "access": "public"
  }
}
