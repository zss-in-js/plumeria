{
  "name": "@plumeria/next",
  "version": "0.3.0",
  "description": "Next.js ServerComponent for Plumeria",
  "keywords": [
    "react",
    "css",
    "css-in-js",
    "plumeria",
    "styling"
  ],
  "author": "Refirst",
  "repository": "github:zss-in-js/plumeria",
  "license": "MIT",
  "sideEffects": false,
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "default": "./dist/index.js"
    }
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist && pnpm build:mjs && pnpm cjs && pnpm minify",
    "build:mjs": "pnpm esm && for file in $(find dist -name '*.js'); do mv \"$file\" \"${file%.*}.mjs\"; done",
    "cjs": "npx tsc --project tsconfig.cjs.json",
    "esm": "npx tsc --project tsconfig.esm.json",
    "minify": "for file in $(find dist -name '*.js' -o -name '*.mjs'); do terser \"$file\" -m -o \"$file\"; done"
  },
  "publishConfig": {
    "access": "public"
  }
}
